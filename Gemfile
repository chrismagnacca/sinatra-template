# encoding: utf-8
source "https://rubygems.org"

# ruby version
ruby "2.1.1"

# sinatra web framework
gem "sinatra"

# extends sinatra with activerecord helper methods and rake tasks
gem "sinatra-activerecord"

# strong parameter contracts for sinatra
gem "sinatra-param"

# database orm
gem "activerecord", "~>4.0"

# json implementation for ruby
gem "json"

# api documentation
gem "apipie-rails"

# postgresql adapte
gem "activerecord-postgresql-adapter"

# ruby web server
gem "puma"

# classier solution for file uploads for rails, sinatra and other ruby web frameworks
gem "carrierwave"

# rake ruby build toolkit
gem "rake"

# relative directory requires
gem "require_relative"

group :test do
  # rspec behavior driven development testing
  gem "rspec"

  # ruby test helper for injecting fake responses to web requests
  gem "fakeweb"

  # ruby debugger to provide breakpoint handling, stack frames, etc
  gem "byebug"

  # acceptance test framework
  gem "capybara"

  # testing api for testing rack applications
  gem "rack-test"

  # fixtures replacement for setting up test data objects
  gem "factory_girl", "~> 4.0"

  # strategies for cleaning databases in ruby
  gem "database_cleaner"

  # given/when/then keywords for rspec specifications
  gem 'rspec-given'

  # sinatra interactive shell
  gem "tux"

  # growl-notify bindings
  gem "growl"

  # guard is a command line tool to easily handle events on file system modifications
  gem "guard"

  # guard::rspec automatically run your specs (similar to autotest)
  gem "guard-rspec"

  # send user notifications on OSX from the command-line.
  gem "terminal-notifier-guard"
end

# test coverage, history, and statistics via coveralls.io
gem "coveralls"

# code coverage and offline statistics
gem "simplecov"
